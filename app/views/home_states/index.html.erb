<p id="notice"><%= notice %></p>

<h1>Home States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @home_states.each do |home_state| %>
      <tr>
        <td><%= home_state.name %></td>
        <td><%= home_state.state %></td>
        <td><%= link_to 'Show', home_state %></td>
        <td><%= link_to 'Edit', edit_home_state_path(home_state) %></td>
        <td><%= link_to 'Destroy', home_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home State', new_home_state_path %>
